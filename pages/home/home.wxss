/* 随机答题 */
.wordCard{
  align-content: center;
  display:flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content:space-between;
  margin: 0rpx 25rpx 25rpx 25rpx;
  /* margin-top: 40rpx; */
}





.tbc {
  color: white;
  font-size: 40rpx;
  margin-top: 18rpx;
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background-image: linear-gradient( 135deg, #81FBB8 10%, #28C76F 100%);
  border-radius: 20rpx;
}
/* 题目类型 */
.item_root {
  
  align-content: center;
  display:flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content:space-between;
  margin: 40rpx 25rpx 5rpx 25rpx;
  margin-top: 40rpx;
}

.item {
  color: white;
  font-size: 50rpx;
  margin-top: 20rpx;
  width: 49%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background:  linear-gradient( 135deg, #ABDCFF 10%, #0396FF 100%);
  border-radius: 20rpx;
}

.item_root :nth-child(2n) {
  color: white;
  font-size: 50rpx;
  margin-top: 20rpx;
  width: 49%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background: linear-gradient( 135deg, #FEB692 10%, #EA5455 100%);
  border-radius: 20rpx;
}

.item_root :nth-child(3n) {
  color: white;
  font-size: 50rpx;
  margin-top: 18rpx;
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background-image: linear-gradient( 135deg, #E2B0FF 10%, #9F44D3 100%);
  border-radius: 20rpx;
}

.item_root :nth-child(4n) {
  background: #8A2BE2;
}

.item_root :nth-child(5n) {
  background: #FF6A6A;
}